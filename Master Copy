#requires gWidgets
#requires gWidgetstcltk in particular as this works better on Windows
install.packages("gWidgetstcltk")
library("gWidgetstcltk")

win <- gwindow(title = "Cheeky programmers", visible=TRUE, name=title,
               width = NULL, height = NULL, parent=NULL)
group <- ggroup(horizontal = FALSE, container=win)
obj <- glabel("Welcome to our program!", container = group)
obj <- glabel("Type your PDB code here:", container = group)
obj <- gedit("", container=group)
obj <- gbutton("Go", container = group)
obj <- glabel("Identified binding sites of your PDB file:", container = group)
obj <- gcombobox(c(bs$resnames), container=group)
obj <- glabel("BLAST results on your PDB file with an identity of 65<x>50, which will be compared to your PDB file:", container = group)
obj <- glabel(c(no_chain), container=group)
obj <- glabel("Identified binding sites of", glabel(c(a)), container = group)
obj <- gcombobox(c(output_1$resnames), container=group)
obj <- glabel("Identified binding sites of BLAST hit number 2:", container = group)
obj <- gcombobox(c(output_2$resnames), container=group)
obj <- glabel("Identified binding sites of BLAST hit number 3:", container = group)
obj <- gcombobox(c(output_3$resnames), container=group)
obj <- glabel("Identified binding sites of BLAST hit number 4:", container = group)
obj <- gcombobox(c(output_4$resnames), container=group)
obj <- glabel("Identified binding sites of BLAST hit number 5:", container = group)
obj <- gcombobox(c(output_5$resnames), container=group)


##Model of GUI window - nice layout to emulate
 lst <- list()
 lst$title <- "t.test()"
 lst$help <- "t.test"
 lst$variableTypes <- "univariate"
 lst$action <- list(beginning="t.test(",ending=")")
 lst$arguments$hypotheses$mu <-
 list(type = "gedit",text=0,coerce.with=as.numeric)
 lst$arguments$hypotheses$alternative <-
  list(type="gradio", items=c("'two.sided'","'less'","'greater'")
          )
 ggenericwidget(lst, container=gwindow("One sample t test"))
